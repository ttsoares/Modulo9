<table class="table table-hover table-sm"">
<thead>
  <tr>
    <th style="width: 2%;" scope="col">#</th>
    <th style="width: 20%;" scope="col">Description</th>
    <th style="width: 65%;" scope="col">Details</th>
    <th style="width: 13%;" scope="col">Action</th>
  </tr>
</thead>
<tbody>

<!-- Those 'item.uid' are the 'uid' collumn cells in Messages PG table  -->

  <tr>
    <% data.forEach((item, i) => { %>
      <th scope="row"><%=i+1%></th>
      <td><%=item.description%></td>
      <td><%=item.details%></td>
      <td> <button class="btn btn-sm btn-danger btn-rounded remove" id="<%=item.uid%>D">Delete</<button>
           <button class="btn btn-sm btn-info btn-rounded edit" id="<%=item.uid%>E">Edit</<button>
      </td>
  </tr>
  <% }) %>

</tbody>
</table>
